<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <script src="/swfobject.js" type="text/javascript"></script>
    <script src="/jquery-1.6.4.min.js" type="text/javascript"></script>
    <script src="/jquery.json-2.3.min.js" type="text/javascript"></script>
    <script src="/scripts.js" type="text/javascript"></script>
    <script type="text/javascript">
     translations = <%= @translations.to_json %>;
     var tmp = <%= @fingerprint.to_json %>;
     for (var i in tmp) fingerprint[i] = tmp[i];
    </script>
    <title><%= @translations['title'] %></title>
    <link rel="stylesheet" type="text/css" href="/style.css" />
  </head>
  <body>

    <div id="flashcontent"></div>

    <div id="content">
      <h1><%= @translations['title'] %></h1>
      <%= @translations['title_info'] %>
    </div>
    
    <span class="button">
      <img src="<%= @translations['button_switch_language'] %>" onclick="window.location.assign('<%= @translations['switch_language_url'] %>')" style="cursor:pointer">
    </span>
    <span class="button">
      <img src="<%= @translations['button_preview'] %>" onclick="preview()" style="cursor:pointer">
    </span>
    <span id="submit_span" class="button">
      <img src="<%= @translations['button_submit'] %>" onclick="submit()" style="cursor:pointer">
    </span>

    <div id="response"></div>

    <div id="fingerprint">
      <span class="button">
	<img src="<%= @translations['button_switch_language']%>" onclick="window.location.assign('<%= @translations['switch_language_url'] %>')" style="cursor:pointer">
      </span>
      <span class="button">
	<img src="<%= @translations['button_hide'] %>" onclick="preview()" style="cursor:pointer">
      </span>
      <span id="submit_span">
	<img src="<%= @translations['button_submit'] %>" onclick="submit()" style="cursor:pointer">
      </span>
    </div>

    <div id="count"></div>

  </body>
</html>
